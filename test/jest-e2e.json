{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(nanoid)/)"
  ],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "detectOpenHandles": true,
  "forceExit": true
}
